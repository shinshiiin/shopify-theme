<section class="guarantee-section">
  <div class="guarantee-container">
    {%- comment -%} Content Section {%- endcomment -%}
    <div class="guarantee-content">
      {%- if section.settings.logo -%}
        <div class="guarantee-logo">
          {{ section.settings.logo
            | image_url: width: 114
            | image_tag:
              loading: 'lazy',
              alt: section.settings.logo.alt
          }}
        </div>
      {%- else -%}
        <div class="guarantee-logo">
          <img
            src="{{ 'guarantee_logo.webp' | asset_url }}"
            alt="Guarantee logo"
            loading="lazy"
            width="114"
            height="auto"
          >
        </div>
      {%- endif -%}
      
      <h2 class="guarantee-title">{{ section.settings.title }}</h2>
      
      <p class="guarantee-subtitle">{{ section.settings.subtitle }}</p>
      
      <div class="guarantee-action">
        <button type="button" class="guarantee-btn">{{ section.settings.cta_text }}</button>
      </div>
    </div>

    {%- comment -%} Image Section {%- endcomment -%}
    <div class="guarantee-image">
      {%- if section.settings.image -%}
        {{ section.settings.image
          | image_url: width: 1000
          | image_tag:
            loading: 'lazy',
            alt: section.settings.image.alt | default: 'Guarantee'
        }}
      {%- else -%}
        <img
          src="{{ 'placeholder.webp' | asset_url }}"
          alt="Placeholder image"
          loading="lazy"
          width="1000"
          height="auto"
        >
      {%- endif -%}
    </div>
  </div>
</section>

{% style %}
  /* ============================================
     Guarantee Section Styles
     ============================================ */

  .guarantee-section {
    width: 100%;
    padding: 0 20px;
  }

  .guarantee-container {
    display: flex;
    max-width: 1280px;
    margin: 0 auto;
    overflow: hidden;
    border-radius: 24px;
  }

  /* ============================================
     Content Area
     ============================================ */

  .guarantee-content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    flex: 1 1 65%;
    padding: 50px 75px;
    background: linear-gradient(180deg, #B7A0D7 0%, #605471 100%);
    text-align: center;
  }

  .guarantee-logo {
    margin-bottom: 20px;
  }

  .guarantee-logo img {
    max-width: 114px;
    height: auto;
  }

  .guarantee-title {
    color: #FDFDFD;
    font-family: 'Albert Sans', sans-serif;
    font-size: 40px;
    font-weight: 600;
    line-height: 1.2;
    margin: 0 0 20px;
  }

  .guarantee-subtitle {
    color: #FDFDFD;
    font-size: 20px;
    line-height: 1.5;
    margin: 0 0 30px;
  }

  .guarantee-action {
    width: 100%;
  }

  .guarantee-btn {
    min-width: 231px;
    height: 60px;
    padding: 0 32px;
    background-color: #FDFDFD;
    color: #605471;
    border: 2px solid #FDFDFD;
    border-radius: 8px;
    font-size: 16px;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.3s ease;
    text-transform: uppercase;
  }

  .guarantee-btn:hover {
    background-color: transparent;
    color: #FDFDFD;
    transform: translateY(-2px);
  }

  .guarantee-btn:active {
    transform: translateY(0);
  }

  /* ============================================
     Image Area
     ============================================ */

  .guarantee-image {
    flex: 1 1 35%;
    position: relative;
    overflow: hidden;
  }

  .guarantee-image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    display: block;
  }

  /* ============================================
     Responsive Styles
     ============================================ */

  /* Tablet */
  @media (max-width: 1024px) {
    .guarantee-content {
      padding: 40px 50px;
    }

    .guarantee-title {
      font-size: 36px;
    }

    .guarantee-subtitle {
      font-size: 18px;
    }
  }

  /* Mobile */
  @media (max-width: 768px) {
    .guarantee-section {
      padding: 0 15px;
    }

    .guarantee-container {
      flex-direction: column;
      border-radius: 24px;
    }

    .guarantee-content {
      flex: 1 1 auto;
      padding: 40px 30px;
    }

    .guarantee-title {
      font-size: 32px;
      margin-bottom: 16px;
    }

    .guarantee-subtitle {
      font-size: 16px;
      margin-bottom: 24px;
    }

    .guarantee-image {
      flex: 1 1 auto;
      min-height: 300px;
    }

    .guarantee-btn {
      width: 100%;
      max-width: 280px;
    }
  }

  /* Small Mobile */
  @media (max-width: 480px) {
    .guarantee-content {
      padding: 30px 20px;
    }

    .guarantee-title {
      font-size: 28px;
    }

    .guarantee-subtitle {
      font-size: 15px;
    }

    .guarantee-btn {
      min-width: auto;
      max-width: 100%;
      padding: 0 24px;
      font-size: 14px;
    }
  }
{% endstyle %}

{% schema %}
{
  "name": "Guarantee Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Section Logo"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Product Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "30-Day Satisfaction Guarantee"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Section Subtitle",
      "default": "Not thrilled? Contact us within 30 days and we'll make it right. No hassle. Just honest support, 24/7."
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Button Text",
      "default": "GET YOURS TODAY"
    }
  ],
  "presets": [
    {
      "name": "Guarantee Section"
    }
  ]
}
{% endschema %}