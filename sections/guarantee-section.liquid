<div class="guarantee-section">
  <div class="guarantee-container">

    {%- comment -%} Content Section {%- endcomment -%}
    <div class="content">
      {%- if section.settings.logo -%}
        <div class="logo">
          {{ section.settings.logo
            | image_url: width: 114
            | image_tag:
              loading: 'lazy',
              alt: section.settings.logo.alt
          }}
        </div>
      {%- else -%}
        <div class="logo">
          <img
            src="{{ 'guarantee_logo.webp' | asset_url }}"
            alt="{{ block.settings.customer_name | default: 'Customer' }}"
            loading="lazy"
          >
        </div>
      {%- endif -%}
      
      <div class="pdp-section-title-wrap">
        <h2 class="pdp-section-title">{{ section.settings.title }}</h2>
      </div>
      
      <div class="guarantee-text">
        <p>{{ section.settings.subtitle }}</p>
        <div class="guarantee-action-wrap">
          <button class="guarantee-btn">{{ section.settings.cta_text }}</button>
        </div>
      </div>
    </div>

    {%- comment -%} Image Section {%- endcomment -%}
    <div class="image">
      {%- if section.settings.image -%}
        {{ section.settings.image
          | image_url: width: 1000
          | image_tag:
            loading: 'lazy',
            alt: section.settings.image.alt
        }}
      {%- else -%}
        <img
          src="{{ 'placeholder.webp' | asset_url }}"
          alt="{{ block.settings.customer_name | default: 'Customer' }}"
          loading="lazy"
        >
      {%- endif -%}
    </div>
  </div>
</div>

{% style %}
  /* ============================================
     Guarantee Section Styles
     ============================================ */

  .guarantee-section {
    width: 100%;
  }

  .guarantee-container {
    display: flex;
    justify-content: center;
    max-width: 1280px;
    margin: 0 auto;
  }

  /* Content Area */
  .content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    padding: 50px 75px;
    background: linear-gradient(180deg, #B7A0D7 0%, #605471 100%);
    border-radius: 24px 0 0 24px;
    flex: 1;
    min-width: 60%;
  }

  .content .logo img {
    margin-bottom: 20px;
    max-width: 30%;
  }

  .content .pdp-section-title {
    color: #FDFDFD;
    font-family: 'Albert Sans', sans-serif;
    font-size: 40px;
    font-weight: 600;
    text-align: center;
    margin: 0 0 20px;
  }

  .content .guarantee-text {
    width: 100%;
  }

  .content p {
    color: #FDFDFD;
    font-size: 20px;
    text-align: center;
    margin: 0 0 30px;
  }

  /* Button Styles */
  .guarantee-action-wrap {
    text-align: center;
  }

  .guarantee-btn {
    width: 231px;
    height: 60px;
    padding: 0 20px;
    background-color: #FDFDFD;
    color: #605471;
    border: 2px solid #FDFDFD;
    border-radius: 8px;
    font-size: 16px;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .guarantee-btn:hover {
    background-color: transparent;
    color: #FDFDFD;
  }

  /* Image Area */
  .image {
    flex: 1;
    height: auto;
  }

  .image img {
    width: 100%;
    height: 430px;
    object-fit: cover;
    border-radius: 0 24px 24px 0;
    display: block;
  }

  /* ============================================
     Responsive Styles
     ============================================ */

  @media (max-width: 768px) {
    .guarantee-container {
      flex-direction: column;
      padding: 10px;
    }

    .content {
      padding: 40px 20px;
      border-radius: 24px 24px 0 0;
    }

    .content .pdp-section-title {
      font-size: 32px;
    }

    .content p {
      font-size: 18px;
    }

    .image img {
      max-width: 100%;
      height: auto;
      min-height: 300px;
      border-radius: 0 0 24px 24px;
    }

    .guarantee-btn {
      width: 100%;
      max-width: 280px;
    }
  }
{% endstyle %}

{% schema %}
{
  "name": "Guarantee Section",
  "settings": [
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Section Logo"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Product Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "30-Day Satisfaction Guarantee"
    },
    {
      "type": "textarea",
      "id": "subtitle",
      "label": "Section Subtitle",
      "default": "Not thrilled? Contact us within 30 days and we'll make it right. No hassle. Just honest support, 24/7."
    },
    {
      "type": "text",
      "id": "cta_text",
      "label": "Button Text",
      "default": "GET YOURS TODAY"
    }
  ],
  "presets": [
    {
      "name": "Guarantee Section"
    }
  ]
}
{% endschema %}