<div class="product-ingredients-section">
  <div class="container">
    <div class="one-whole column medium-down--one-whole text-center">
      <div class="{{ content_wrap }} vwcm-container">
        <!-- Section Title -->
        
        <h1 class="pdp-section-title vwcm-title">{{ section_item.section_title | metafield_tag }}</h1>
        
        <div class="vwcm-grid">
          <!-- LEFT COLUMN - Ingredients A, B, C -->
          <div class="vwcm-col first">
            <!-- Ingredient A -->
            {% if section_item.section_ingredient_title_a != blank %}
              <div class="vwcm-item">
                <div class="dot">
                  {% if section_item.section_ingredient_icon_a != blank %}
                    {% assign icon_a_url = section_item.section_ingredient_icon_a | file_url %}
                    <img src="{{ icon_a_url }}" alt="{{ section_item.section_ingredient_title_a }}" class="ingredient-icon">
                  {% endif %}
                </div>
                <h3>{{ section_item.section_ingredient_title_a | metafield_tag }}</h3>
                <p>{{ section_item.section_ingredient_text_a | metafield_tag }}</p>
              </div>
            {% endif %}

            <!-- Ingredient B -->
            {% if section_item.section_ingredient_title_b != blank %}
              <div class="vwcm-item">
                <div class="dot">
                  {% if section_item.section_ingredient_icon_b != blank %}
                    {% assign icon_b_url = section_item.section_ingredient_icon_b | file_url %}
                    <img src="{{ icon_b_url }}" alt="{{ section_item.section_ingredient_title_b }}" class="ingredient-icon">
                  {% endif %}
                </div>
                <h3>{{ section_item.section_ingredient_title_b | metafield_tag }}</h3>
                <p>{{ section_item.section_ingredient_text_b | metafield_tag }}</p>
              </div>
            {% endif %}

            <!-- Ingredient C -->
            {% if section_item.section_ingredient_title_c != blank %}
              <div class="vwcm-item">
                <div class="dot">
                  {% if section_item.section_ingredient_icon_c != blank %}
                    {% assign icon_c_url = section_item.section_ingredient_icon_c | file_url %}
                    <img src="{{ icon_c_url }}" alt="{{ section_item.section_ingredient_title_c }}" class="ingredient-icon">
                  {% endif %}
                </div>
                <h3>{{ section_item.section_ingredient_title_c | metafield_tag }}</h3>
                <p>{{ section_item.section_ingredient_text_c | metafield_tag }}</p>
              </div>
            {% endif %}
          </div>

          <!-- CENTER IMAGE -->
          <div class="vwcm-center">
            <div class="center-bg"></div>
            {% if section_item.section_image != blank %}
              {% assign section_image_url = section_item.section_image | file_url %}
              <img src="{{ section_image_url }}" class="mask-img" alt="{{ section_item.section_title }}">
            {% endif %}
          </div>

          <!-- RIGHT COLUMN - Ingredients D, E, F -->
          <div class="vwcm-col second">
            <!-- Ingredient D -->
            {% if section_item.section_ingredient_title_d != blank %}
              <div class="vwcm-item">
                <div class="dot">
                  {% if section_item.section_ingredient_icon_d != blank %}
                    {% assign icon_d_url = section_item.section_ingredient_icon_d | file_url %}
                    <img src="{{ icon_d_url }}" alt="{{ section_item.section_ingredient_title_d }}" class="ingredient-icon">
                  {% endif %}
                </div>
                <h3>{{ section_item.section_ingredient_title_d | metafield_tag }}</h3>
                <p>{{ section_item.section_ingredient_text_d | metafield_tag }}</p>
              </div>
            {% endif %}

            <!-- Ingredient E -->
            {% if section_item.section_ingredient_title_e != blank %}
              <div class="vwcm-item">
                <div class="dot">
                  {% if section_item.section_ingredient_icon_e != blank %}
                    {% assign icon_e_url = section_item.section_ingredient_icon_e | file_url %}
                    <img src="{{ icon_e_url }}" alt="{{ section_item.section_ingredient_title_e }}" class="ingredient-icon">
                  {% endif %}
                </div>
                <h3>{{ section_item.section_ingredient_title_e | metafield_tag }}</h3>
                <p>{{ section_item.section_ingredient_text_e | metafield_tag }}</p>
              </div>
            {% endif %}

            <!-- Ingredient F -->
            {% if section_item.section_ingredient_title_f != blank %}
              <div class="vwcm-item">
                <div class="dot">
                  {% if section_item.section_ingredient_icon_f != blank %}
                    {% assign icon_f_url = section_item.section_ingredient_icon_f | file_url %}
                    <img src="{{ icon_f_url }}" alt="{{ section_item.section_ingredient_title_f }}" class="ingredient-icon">
                  {% endif %}
                </div>
                <h3>{{ section_item.section_ingredient_title_f | metafield_tag }}</h3>
                <p>{{ section_item.section_ingredient_text_f | metafield_tag }}</p>
              </div>
            {% endif %}
          </div>
        </div>

        <!-- All Ingredients Dropdown -->
        {% if section_item.section_all_ingredients != blank %}
          <div class="all-ingredients">
            <div class="drop-header">
             <span class="metafield-single_line_text_field">All Ingredients </span>
              
              <span class="chevron">
                  <img 
                    src="{{ 'arrow.webp' | asset_url }}" 
                    alt="Toggle ingredients"
                    class="chevron-icon"
                  >
              </span>
            </div>
            <div class="drop-content">
              {{ section_item.section_all_ingredients | metafield_tag }}
            </div>
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>

{% style %}
.{{ content_wrap }} {
  max-width: 1100px;
  /* margin: auto;
  padding: 60px 20px; */
  text-align: center;
  font-family: "Inter", sans-serif;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  gap: 32px;
}

/* .vwcm-title {
  font-size: 32px;
  font-weight: 700;
  margin-bottom: 32px !important;
  color: #3d3451;
} */

.vwcm-grid {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  gap: 40px;
  align-items: center;
}

.wrap-product-ingredients-a-4.vwcm-container {
  justify-self: center;
}

/* Ingredient Columns */
.vwcm-col {
  display: flex;
  flex-direction: column;
  gap: 50px;
  height: 100%;
  justify-content: space-between;
}

.vwcm-item {
  text-align: left;
  position: relative;
  display: flex;
  flex-direction: column;
}

.vwcm-col .vwcm-item .dot{
    width: 36px; !important;
}

.vwcm-col.first .vwcm-item {
  align-items: end;
  text-align: end;
}

.vwcm-col.first .vwcm-item:nth-child(2) {
  padding-right: 40px;
}

.vwcm-col.second .vwcm-item:nth-child(2) {
  padding-left: 40px;
}

.vwcm-item h3 {
  font-size: 24px;
  /* font-weight: 700;
  color: #4d4563;
  margin-bottom: 6px; */
}

.vwcm-item p {
  font-size: 14px;
  line-height: 1.5;
  color: #746c8a;
}

/* Center Image */
.vwcm-center {
  position: relative;
  text-align: center;
}

.center-bg {
  width: 400px;
  height: 400px;
  background: linear-gradient(900deg, #B9B2E1 0%, #F7F6FF 100%);
  border-radius: 50%;
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
}

.mask-img {
  position: relative;
  width: 100%;
  z-index: 2;
}

/* Ingredients Dropdown */
.all-ingredients {
  /* margin-top: 70px; */
  padding: 0;
  background: #FDFDFD;
  border-radius: 14px;
  overflow: hidden;
  text-align: left;
  max-width: 839px;
  width: 100%;
}

/* Header */
.drop-header {
  /* font-weight: 700; */
  font-size: 24px !important;
  cursor: pointer;
  padding: 18px 24px;
  font-size: 18px;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #4d4563;
  gap: 15px;
}

/* Chevron arrow */
.chevron {
  display: inline-flex;
  align-items: center;
}


.chevron-icon {
  width: 14px; /* adjust if needed */
  height: auto;
  transition: transform 0.3s ease;
}
/* Rotate when open */
.all-ingredients.open .chevron-icon {
  transform: rotate(180deg);
}

/* Dropdown content */
.drop-content {
  padding: 0 24px 20px;
  line-height: 1.6;
  color: #6b657c;
  font-size: 14px;
  display: none;
  text-align: center;
}

.all-ingredients.open .drop-content {
  display: block;
  font-family: 'Chivo Mono';
}

/* MOBILE RESPONSIVENESS */
@media (max-width: 768px) {
  .{{ content_wrap }} {
    padding: 40px 20px;
  }

  .vwcm-title {
    font-size: 26px;
    margin-bottom: 40px;
  }

  /* Stack everything */
  .vwcm-grid {
    grid-template-columns: 1fr;
    gap: 16px;
  }

  /* ORDERING */
  .vwcm-center {
    order: 1;
  }

  .vwcm-col.first {
    order: 2;
    align-items: flex-start !important;
    text-align: left !important;
    gap: 16px !important;
  }

  .vwcm-col.second {
    order: 3;
    align-items: flex-start !important;
    text-align: left !important;
    gap: 16px !important;
  }

  /* Fix alignment on mobile */
  .vwcm-item {
    flex-direction: column;
    gap: 8px;
    align-items: center !important;
    justify-content: center;
    padding: 12px 32px !important;
    background-color: #FDFDFD !important;
    border-radius: 12px !important;
  }

  .vwcm-item h3 {
    margin: 0;
    text-align: center;
  }

  .vwcm-item p {
    margin-top: 2px;
    text-align: center;
  }

  .vwcm-col.second .vwcm-item,
  .vwcm-col.first .vwcm-item {
    text-align: center !important;
  }

  /* Center image resize */
  .center-bg {
    width: 389px;
    height: 389px;
  }

  .mask-img {
    width: 210px;
  }

  /* Ingredients dropdown spacing */
  .all-ingredients {
    margin-top: 40px;
  }

  .drop-content {
    text-align: left;
  }
}

/* EXTRA SMALL SCREEN */
@media (max-width: 480px) {
  .vwcm-title {
    font-size: 22px;
  }

  .center-bg {
    width: 290px;
    height: 290px;
  }

    /* .mask-img {
      width: 160px;
    } */
}
{% endstyle %}

<script>
document.addEventListener("DOMContentLoaded", function() {
  const block = document.querySelector(".all-ingredients");
  if (block) {
    const header = block.querySelector(".drop-header");
    header.addEventListener("click", () => {
      block.classList.toggle("open");
    });
  }
});
</script>


