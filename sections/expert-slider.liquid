<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.1.4/dist/css/splide.min.css">

<div class="expert-slider-{{ section.id }}">
  <h2 class="section-title">{{ section.settings.section_title }}</h2>

  <div id="expert-splide-{{ section.id }}" class="splide">
    <div class="splide__track">
      <ul class="splide__list">
        
        {% for block in section.blocks %}
          <li class="splide__slide" {{ block.shopify_attributes }}>
            <div class="expert-card">
              <div class="image-wrapper">
                {% if block.settings.expert_image %}
                  <img src="{{ block.settings.expert_image | img_url: '700x' }}" class="expert-image" alt="{{ block.settings.expert_name }}">
                {% else %}
                  <img src="https://via.placeholder.com/700x500" class="expert-image" alt="{{ block.settings.expert_name }}">
                {% endif %}
                
                {% if block.settings.video_url != blank %}
                  <button class="play-button" data-video="{{ block.settings.video_url }}">
                    <svg width="15" height="18" viewBox="0 0 15 18" fill="none"><path d="M0.98 0.09L14.67 8.41C15 8.6 15 9.4 14.67 9.58L0.98 17.9C0.5 18.2 0 17.8 0 17.3V0.7C0 0.2 0.5 -0.2 0.98 0.09Z" fill="#494940"/></svg>
                  </button>
                {% endif %}
              </div>
              <div class="expert-info">
                <h3>{{ block.settings.expert_name }}</h3>
                <p class="expert-role">{{ block.settings.expert_role }}</p>
                <p class="expert-desc">{{ block.settings.expert_description }}</p>
              </div>
            </div>
          </li>
        {% endfor %}

      </ul>
    </div>

    <div class="splide__arrows">
      <button class="splide__arrow splide__arrow--prev">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
          <path d="M15 18L9 12L15 6" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>
      <button class="splide__arrow splide__arrow--next">
        <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
          <path d="M9 18L15 12L9 6" stroke="white" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
        </svg>
      </button>
    </div>
  </div>
</div>

<div class="video-modal-overlay" id="ExpertVideoModal">
  <div class="video-modal-content">
    <button class="close-modal">âœ•</button>
    <video id="modalVideo" controls width="100%" height="auto">
      <source src="" type="video/mp4">
    </video>
  </div>
</div>


{%- style -%}
  .expert-slider-{{ section.id }} {
    padding: 60px 20px;
    background: #1a1a1a;
    font-family: sans-serif;
    overflow: hidden;
  }

  .expert-slider-{{ section.id }} .section-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 50px;
    text-align: center;
    color: #fff;
    text-transform: uppercase;
    letter-spacing: 1px;
  }

  .expert-slider-{{ section.id }} .splide {
    max-width: 1400px;
    margin: 0 auto;
    position: relative;
    padding: 0 60px;
  }

  .expert-slider-{{ section.id }} .expert-card {
    background: #fff;
    border-radius: 16px;
    overflow: hidden;
    height: 100%;
  }

  .expert-slider-{{ section.id }} .image-wrapper {
    position: relative;
    width: 100%;
    line-height: 0;
    background: #d3d3d3;
  }

  .expert-slider-{{ section.id }} .expert-image {
    width: 100%;
    height: 280px;
    object-fit: cover;
  }

  .expert-slider-{{ section.id }} .play-button {
    position: absolute;
    bottom: 16px;
    left: 16px;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    background: #fff;
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    transition: transform 0.2s ease;
  }

  .expert-slider-{{ section.id }} .play-button:hover {
    transform: scale(1.1);
  }

  .expert-slider-{{ section.id }} .expert-info {
    padding: 20px;
    background: #fff;
  }

  .expert-slider-{{ section.id }} .expert-info h3 {
    font-size: 1.25rem;
    margin: 0 0 8px 0;
    font-weight: 700;
    color: #000;
  }

  .expert-slider-{{ section.id }} .expert-role {
    text-transform: uppercase;
    font-size: 0.7rem;
    color: #666;
    letter-spacing: 1px;
    margin-bottom: 12px;
    font-weight: 600;
  }

  .expert-slider-{{ section.id }} .expert-desc {
    font-size: 0.95rem;
    color: #444;
    line-height: 1.5;
  }

  /* Arrow Styles */
  .expert-slider-{{ section.id }} .splide__arrow {
    width: 48px;
    height: 48px;
    border-radius: 8px;
    background: rgba(255, 255, 255, 0.1);
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
  }

  .expert-slider-{{ section.id }} .splide__arrow:hover {
    background: rgba(255, 255, 255, 0.2);
    transform: scale(1.05);
  }

  .expert-slider-{{ section.id }} .splide__arrow--prev {
    left: 0;
  }

  .expert-slider-{{ section.id }} .splide__arrow--next {
    right: 0;
  }

  .expert-slider-{{ section.id }} .splide__arrow:disabled {
    opacity: 0.3;
    cursor: not-allowed;
  }

  /* Modal Styles */
  .video-modal-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.9);
    display: none;
    justify-content: center;
    align-items: center;
    z-index: 9999;
  }

  .video-modal-content {
    position: relative;
    width: 90%;
    max-width: 900px;
    background: #000;
    border-radius: 15px;
    overflow: hidden;
  }

  .video-modal-overlay.active {
    display: flex;
  }

  .close-modal {
    position: absolute;
    top: 15px;
    right: 15px;
    background: rgba(255, 255, 255, 0.9);
    border-radius: 50%;
    width: 35px;
    height: 35px;
    border: none;
    cursor: pointer;
    z-index: 10;
    font-size: 18px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .close-modal:hover {
    background: #fff;
  }

  @media (max-width: 1024px) {
    .expert-slider-{{ section.id }} .splide {
      padding: 0 50px;
    }
  }

  @media (max-width: 768px) {
    .expert-slider-{{ section.id }} .section-title {
      font-size: 1.5rem;
    }

    .expert-slider-{{ section.id }} .splide {
      padding: 0 40px;
    }

    .expert-slider-{{ section.id }} .splide__arrow {
      width: 40px;
      height: 40px;
    }
  }

  @media (max-width: 640px) {
    .expert-slider-{{ section.id }} .splide {
      padding: 0 35px;
    }
  }
{%- endstyle -%}

<script src="https://cdn.jsdelivr.net/npm/@splidejs/splide@4.1.4/dist/js/splide.min.js"></script>

<script>
  document.addEventListener('DOMContentLoaded', function () {
    // Initialize Slider
    new Splide('#expert-splide-{{ section.id }}', {
      type   : 'slide',
      perPage: 4,
      gap    : '20px',
      pagination: false,
      breakpoints: {
        1200: { perPage: 3 },
        900: { perPage: 2 },
        640:  { perPage: 1 }
      }
    }).mount();

    // Modal Logic
    const modal = document.getElementById('ExpertVideoModal');
    const video = document.getElementById('modalVideo');
    const closeBtn = modal.querySelector('.close-modal');

    document.querySelectorAll('.play-button').forEach(btn => {
      btn.addEventListener('click', function() {
        const videoSrc = this.getAttribute('data-video');
        video.querySelector('source').src = videoSrc;
        video.load();
        modal.classList.add('active');
        video.play();
      });
    });

    const closeModal = () => {
      modal.classList.remove('active');
      video.pause();
    };

    closeBtn.addEventListener('click', closeModal);
    modal.addEventListener('click', (e) => {
      if(e.target === modal) closeModal();
    });
  });
</script>

