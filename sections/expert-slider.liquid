{%- style -%}
  .expert-slider-{{ section.id }} {
    padding: 60px 0;
    font-family: sans-serif;
    overflow: hidden;
  }

  .expert-slider-{{ section.id }} .section-title {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 30px;
    padding: 0 20px;
    max-width: 1200px;
    margin-left: auto;
    margin-right: auto;
  }

  .expert-slider-{{ section.id }} .expert-card {
    padding: 10px;
  }

  .expert-slider-{{ section.id }} .image-wrapper {
    position: relative;
    width: 100%;
    line-height: 0;
  }

  .expert-slider-{{ section.id }} .expert-image {
    width: 100%;
    height: auto;
    border-radius: 12px;
    object-fit: cover;
  }

  .expert-slider-{{ section.id }} .play-button {
    position: absolute;
    bottom: 16px;
    left: 16px;
    width: 50px;
    height: 50px;
    border-radius: 50%;
    background: #fff;
    border: none;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    transition: transform 0.2s ease;
  }

  .expert-slider-{{ section.id }} .play-button:hover {
    transform: scale(1.1);
  }

  .expert-slider-{{ section.id }} .expert-info h3 {
    font-size: 1.5rem;
    margin: 15px 0 5px 0;
    font-weight: 700;
  }

  .expert-slider-{{ section.id }} .expert-role {
    text-transform: uppercase;
    font-size: 0.75rem;
    color: #666;
    letter-spacing: 1px;
    margin-bottom: 8px;
  }

  .expert-slider-{{ section.id }} .expert-desc {
    font-size: 1rem;
    color: #444;
    line-height: 1.4;
  }

  /* Modal Styles */
  .video-modal-overlay {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: rgba(0,0,0,0.8);
    display: none;
    justify-content: center;
    align-items: center;
    z-index: 9999;
  }

  .video-modal-content {
    position: relative;
    width: 90%;
    max-width: 800px;
    background: #000;
    border-radius: 15px;
    overflow: hidden;
  }

  .video-modal-overlay.active {
    display: flex;
  }

  .close-modal {
    position: absolute;
    top: 10px;
    right: 10px;
    background: #fff;
    border-radius: 50%;
    width: 30px;
    height: 30px;
    border: none;
    cursor: pointer;
    z-index: 10;
  }

  @media (max-width: 768px) {
    .expert-slider-{{ section.id }} .section-title {
      font-size: 1.5rem;
    }
  }
{%- endstyle -%}

