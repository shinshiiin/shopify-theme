<div class="section">
  <div class="container">
    <div class="UGC-vids-section {{ section.id }}">
      <div class="left-column">
        <div class="section-title-wrap">
          <h2 class="section-title">{{ section.settings.section_title }}</h2>
          {% if section.settings.section_sub_title != blank %}
            <div class="section-subtitle">
              {{ section.settings.section_sub_title }}
            </div>
          {% endif %}
          <button class="global-button global-button--primary scroll-btn" >{{ section.settings.button_text }}</button>
        </div>
      </div>
      <div class="video-column">
          <div class="swiper swiper-{{ section.id }} video-marquee">
            <div class="swiper-pagination"></div>
            <div class="swiper-wrapper">
              {% assign video_metaobject = section.settings.videos_metaobject %}
              {% if video_metaobject != blank %}
                {% for video_item in video_metaobject.videos.value %}
                  <div class="swiper-slide">
                    <div>
                      <video preload="metadata" autoplay playsinline muted loop muted="true">
                          <source src="{{ video_item.sources[0].url }}" type="video/mp4">
                          Your browser does not support the video tag.
                      </video>
                      {% if video_item.label != blank %}
                        <div class="overlay-label">
                          {{ video_item.label }}
                        </div>
                      {% endif %}
                    </div>
                  </div>
                {% endfor %}
              {% else %}
                <div class="placeholder">
                  <img
                    src="{{ 'placeholder_3.webp' | asset_url }}"
                    alt="Customer"
                    loading="lazy"
                  >
                </div>
                <div class="placeholder-mobile">
                  <img
                    src="{{ 'placeholder_3.webp' | asset_url }}"
                    alt="Customer"
                    loading="lazy"
                  >
                </div>
              {% endif %}
          </div>
        </div>
      </div>
    </div>  
  </div>
</div>

{% style %}

.container {
  margin: auto;
}

.{{ section.id }} {
  display: flex;
  padding: 40px 10px;
  max-width: 1200px;
  justify-self: center;
  gap: 20px;
}

.{{ section.id }} .left-column {
  min-width: 495px;
  align-content: center;
}

.{{ section.id }} .section-title {
  max-width: 420px;
  text-align: left;
  font-weight: 500;
  font-size: {{ section.settings.title_size }}px;
  color: {{ section.settings.title_color }} !important;
  letter-spacing: -0.02em;
  margin: 0;
  line-height: 1.2;
}

.{{ section.id }} .section-subtitle {
  max-width: 400px;
  margin-top: 12px;
  margin-bottom: 20px;
  color: {{ section.settings.subtitle_color }} !important;
  font-size: {{ section.settings.subtitle_size }}px;
  line-height: 1.5;
}

.{{ section.id }} .section-subtitle .metafield-rich_text_field  {
  font-size: clamp(14px, 2vw, 16px);
}

.{{ section.id }} .section-title-wrap {
  margin-top: clamp(0px, 3vw, 15px);
}

.{{ section.id }} .video-column {
  overflow: hidden;
  width: calc(57.1428571429% - 20px);
  flex-shrink: 0;
}

.{{ section.id }} .placeholder img {
  height: 100%;
  width: 100%;
  object-fit: cover;
}

.{{ section.id }} .video-marquee {
  width: 100%;
  overflow: visible;
  z-index: 0;
}

.{{ section.id }} .video-marquee .swiper-wrapper {
  -webkit-transition-timing-function: linear !important;
  -o-transition-timing-function: linear !important;
  transition-timing-function: linear !important;
}

.{{ section.id }} .swiper-slide {
  height: auto;
}


.{{ section.id }} .swiper-slide > div {
  position: relative;
  width: 340px;
  aspect-ratio: 9 / 16;
  overflow: hidden;
}

.{{ section.id }} .swiper-slide video {
  width: 100%;
  height: 100%;
  max-width: none;
  object-fit: cover;
  display: block;
  transform: translateZ(0);
  backface-visibility: hidden;
  will-change: transform;
  border-radius: 10px;
}
    
.{{ section.id }} button {
  font-size: clamp(15px, 3vw, 18px);
  background: {{ section.settings.button_color }};
  border-color: #BACBE7;
  color: #FFFFFF;
  border-radius: 8px;
  margin-top: 10px;
  padding: 15px 20px;
  border: 1px solid;
  cursor: pointer;
  transition: opacity 0.3s ease;
}

.{{ section.id }} button:hover {
  opacity: 0.9;
}

.{{ section.id }} .overlay-label {
  width: calc(100% - 10px);
  margin: 0 auto;
  left: 0;
  right: 0;
  position: absolute;
  bottom: 5px;
  background: linear-gradient(180deg, rgba(254,246,171,0) 0%, rgba(0,0,0,0.8939950980392157) 100%);
  color: #fff;
  padding: 60px 15px 10px;
  border-radius: 0px 0px 10px 10px;
}
  
.{{ section.id }} .overlay-label .metafield-rich_text_field {
  font-size: clamp(16px, 3vw, 18px);
}

/* Tablet view */
@media (max-width: 1024px) {
  .{{ section.id }} .left-column {
    min-width: 350px;
  }

  .{{ section.id }} .section-title {
    max-width: 100%;
    font-size: calc({{ section.settings.title_size }}px - 6px);
  }

  .{{ section.id }} .swiper-slide > div {
    width: 280px;
  }
}

/* Mobile view */
@media (max-width: 768px) {
  .{{ section.id }} {
    flex-direction: column;
    max-width: 100%;
    padding: 32px 16px;
    gap: 24px;
  }

  .{{ section.id }} .left-column {
    min-width: auto;
    width: 100%;
    text-align: center;
  }

  .{{ section.id }} .section-title-wrap {
    display: flex;
    flex-direction: column;
    align-items: center;
  }

  .{{ section.id }} .section-title {
    text-align: center;
    font-size: clamp(28px, 7vw, calc({{ section.settings.title_size }}px - 12px));
    max-width: 100%;
  }

  .{{ section.id }} .section-subtitle {
    text-align: center;
    max-width: 100%;
    font-size: clamp(14px, 4vw, {{ section.settings.subtitle_size }}px);
  }

  .{{ section.id }} button {
    align-self: center;
    margin-bottom: 0;
    width: 100%;
    max-width: 300px;
  }

  .{{ section.id }} .video-column {
    width: 100%;
    margin: 0 -16px;
    overflow: visible;
  }

  .{{ section.id }} .video-marquee {
    overflow: hidden;
  }

  .{{ section.id }} .swiper-slide > div {
    width: 260px;
  }
}

/* Small mobile devices */
@media (max-width: 480px) {
  .{{ section.id }} {
    padding: 24px 16px;
  }

  .{{ section.id }} .section-title {
    font-size: clamp(24px, 7vw, 32px);
  }

  .{{ section.id }} .section-subtitle {
    font-size: 14px;
    margin-top: 8px;
  }

  .{{ section.id }} button {
    font-size: 16px;
    padding: 12px 20px;
  }

  .{{ section.id }} .swiper-slide > div {
    width: 220px;
  }

  .{{ section.id }} .overlay-label {
    padding: 40px 10px 8px;
  }

  .{{ section.id }} .overlay-label .metafield-rich_text_field {
    font-size: 14px;
  }
}

{% endstyle %}

<script>
  document.addEventListener("DOMContentLoaded", (event) => {
    const marqueeSlider = new Swiper('.swiper-{{ section.id }}', {
      slidesPerView: 'auto',
      spaceBetween: 20,
      speed: 4000,
      autoplay: {
        delay: 0,
        disableOnInteraction: false,
      },
      loop: true,
      allowTouchMove: false,
      freeMode: true,
      breakpoints: {
        1024: {
          slidesPerView: 1,
          spaceBetween: 50,
          speed: 4000,
        },
        768: {
          slidesPerView: 1,
          spaceBetween: 0,
          speed: 4000,
        },
        480: {
          slidesPerView: 0,
          spaceBetween: 0,
          speed: 3500,
        },
        0: {
          slidesPerView: 1,
          spaceBetween: 0,
          speed: 3000,
        }
      },
    });
  });
</script>

