  <script>
    window.addEventListener('load', function () {
      const urlParams = new URLSearchParams(window.location.search);

      if (urlParams.has('variant')) {
        const variantFromUrl = urlParams.get('variant');
        const activeSwatch = document.querySelector(`.swatch-element[data-id="${variantFromUrl}"]`);
        if (activeSwatch) {
          activeSwatch.classList.add('active');
          console.log('Variant from URL detected — skipping preselection and setting active swatch.');

          // ✅ Price update logic when variant is from URL
          const price = parseFloat(activeSwatch.getAttribute('data-price').slice(1));
          const compare_price = parseFloat(activeSwatch.getAttribute('data-compare').slice(1));
          const count = activeSwatch.getAttribute('data-value').charAt(0);
          const currency = activeSwatch.getAttribute('data-price').charAt(0);
          const discountPercent = Math.round(((compare_price - price) / compare_price) * 100);

          const price_wrap = document.querySelector('.product-block--custom_price');
          const price_el = price_wrap.querySelector('.current_price .money');
          const compare_el = price_wrap.querySelector('.was_price .money');
          const savings_el = price_wrap.querySelector('.savings-off');

          price_el.innerHTML = currency + (Math.floor(price / count * 100) / 100).toFixed(2);
          let sub_text = document.createElement('span');
          sub_text.classList.add('sub-text');
          sub_text.innerText = ' each';
          price_el.appendChild(sub_text);

          if (price < compare_price) {
            compare_el.innerText = currency + (Math.floor(compare_price / count * 100) / 100).toFixed(2);
            savings_el.innerText = 'Save ' + discountPercent + '%';
            compare_el.style.display = 'block';
            savings_el.style.display = 'block';
          } else {
            compare_el.style.display = 'none';
            savings_el.style.display = 'none';
          }
        }

      const mainSlider = Flickity.data('.product_gallery.js-product-gallery');
      if (mainSlider) {
        mainSlider.select(0);
      }

        return; // ✅ Stop preselection if variant param exists
      }

      // ✅ Preselection logic (fallback)
      const preselectedVariantTitle = "{{ preselected_variant_title | escape }}";
      const preselectedVariantID = "{{ preselected_variant_id }}";

      $('.selector-wrapper .single-option-selector').each(function () {
        $(this).find('option').filter(function () {
          return $(this).text().trim() === preselectedVariantTitle;
        }).first().prop('selected', true).trigger('change');
        console.log('Preselected variant applied.');
      });

      const activeSwatch = document.querySelector(`.swatch-element[data-id="${preselectedVariantID}"]`);
      if (activeSwatch) {
        activeSwatch.classList.add('active');
      }

      const mainSlider = Flickity.data('.product_gallery.js-product-gallery');
      if (mainSlider) {
        mainSlider.select(0);
      }
    });

    // ✅ Swatch click price update
    document.addEventListener('DOMContentLoaded', function () {
      document.querySelectorAll('.swatch-element').forEach(swatch => {
        swatch.addEventListener('click', function () {
          document.querySelectorAll('.swatch-element').forEach(el => el.classList.remove('active'));
          this.classList.add('active');

          const price = parseFloat(this.getAttribute('data-price').slice(1));
          const compare_price = parseFloat(this.getAttribute('data-compare').slice(1));
          const count = this.getAttribute('data-value').charAt(0);
          const currency = this.getAttribute('data-price').charAt(0);
          const discountPercent = Math.round(((compare_price - price) / compare_price) * 100);

          const price_wrap = document.querySelector('.product-block--custom_price');
          const price_el = price_wrap.querySelector('.current_price .money');
          const compare_el = price_wrap.querySelector('.was_price .money');
          const savings_el = price_wrap.querySelector('.savings-off');

          price_el.innerHTML = currency + (Math.floor(price / count * 100) / 100).toFixed(2);
          let sub_text = document.createElement('span');
          sub_text.classList.add('sub-text');
          sub_text.innerText = ' each';
          price_el.appendChild(sub_text);

          if (price < compare_price) {
            compare_el.innerText = currency + (Math.floor(compare_price / count * 100) / 100).toFixed(2);
            savings_el.innerText = 'Save ' + discountPercent + '%';
            compare_el.style.display = 'block';
            savings_el.style.display = 'block';
          } else {
            compare_el.style.display = 'none';
            savings_el.style.display = 'none';
          }
        });
      });
    });
  </script>

